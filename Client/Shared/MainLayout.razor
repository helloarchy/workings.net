@inherits LayoutComponentBase

<MudLayout>

    @* App bar and account handler *@
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudText Typo="Typo.h5" Class="ml-3">Workings</MudText>
        <MudAppBarSpacer/>
        <LoginDisplay/>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit"
                       OnClick="@DrawerToggle"/>
    </MudAppBar>

    @* NavMenu *@
    <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Right"
               ClipMode="DrawerClipMode.Always" Elevation="2" Height="100">
        <NavMenu/>
    </MudDrawer>

    @* Body *@
    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}